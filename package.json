{
  "name": "jest-pact",
  "version": "0.9.3",
  "description": "a pact adaptor for jest",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint --project . --fix",
    "build": "rimraf dist && tsc --project tsconfig.dist.json",
    "test": "jest --coverage --runInBand --verbose --coverageReporters=lcov",
    "dist": "npm run lint && npm run test && npm run build",
    "deploy:prepare": "./scripts/create_npmrc_file.sh",
    "format:base": "prettier \"src/**/*.{ts,js}\"",
    "format:fix": "npm run format:base -- --write",
    "format:check": "npm run format:base -- --check",
    "release": "standard-version",
    "release:dryrun": "npm run test && npm publish --dry-run",
    "release:trigger": "./scripts/trigger-release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pact-foundation/jest-pact.git"
  },
  "author": "YOU54F",
  "contributors": [
    {
      "name": "Yousaf Nabi",
      "url": "https://github.com/YOU54F"
    },
    {
      "name": "Timothy Jones",
      "url": "https://github.com/TimothyJones"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pact-foundation/jest-pact/issues"
  },
  "homepage": "https://github.com/pact-foundation/jest-pact/#readme",
  "devDependencies": {
    "@commitlint/cli": "^10.0.0",
    "@commitlint/config-conventional": "^10.0.0",
    "@pact-foundation/pact": "9.17.3",
    "@pact-foundation/pact-js-prettier-config": "^1.0.0",
    "@types/jest": "^27.1.3",
    "@types/supertest": "2.0.8",
    "coveralls": "3.1.1",
    "cross-env": "7.0.2",
    "husky": "^4.3.8",
    "jest": "^28.1.0",
    "jest-junit": "13.2.0",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "standard-version": "^9.0.0",
    "supertest": "6.2.3",
    "ts-jest": "^28.0.1",
    "ts-node": "8.6.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.6.4"
  },
  "peerDependencies": {
    "@pact-foundation/pact": "^9.12.2",
    "jest": "^24.0.0 || ^25.0.0 || ^26.0.0 || ^27.0.0 || ^28.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        0,
        "always",
        72
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  }
}
